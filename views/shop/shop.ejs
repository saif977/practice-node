<%- include("../includes/head.ejs") %>
        <link rel="stylesheet" href="/shop.css">
    </head>
<body>
    <%- include("../includes/nav.ejs")%>
        <main>
            <% if(prods.length>0) { %>
                <% prods.forEach((i=>{ %>
                    <div class="grid">
                        <article class="cnt">
                            <h2><%= i.title %></h2>
                            <div class="content">
                                <h4><%= i.price %>rs</h4>
                                <p><%= i.description %></p>
                            </div>
                            <div class="cardAction">
                                <a href="/shop/shop/<%= i.id %>" class="btn">details</a>
                                <%- include("../includes/add-to-cart",{prod:i})%>
                            </div>
                        </article>
                    </div>
                <% })) %>
            <% } else { %>
                <h1>no products...</h1>
            <% } %>
        </main>
</body> 
</html>